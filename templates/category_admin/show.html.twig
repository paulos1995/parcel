{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ "Id"|trans }}</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>{{ "Name"|trans }}</th>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <th>{{ "Location"|trans }}</th>
            <td>{% if category.location %}
                <a href="{{ path('location_admin_show', {'id': category.location.id}) }}" class="">{{ category.location }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ "Owner"|trans }}</th>
            <td>
                {% if category.owner %}
                    <a href="{{ path('user_admin_show', {'id': category.owner.id}) }}"
                                              class="">{{ category.owner }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ "Scan"|trans }}</th>
            <td>{{ category.scan ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>




    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('category_admin_index') }}"
                   class="btn btn-secondary btn-block">{{ "Back to list"|trans }}</a>
            </div>
            <div class="col-md-2">
                <a href="{{ path('dh_auditor_show_entity_history', {'id': category.id, 'entity': 'App-Entity-Category'}) }}"
                   class="btn btn-outline-info btn-block">{{ "Audit"|trans }}</a>
            </div>
            <div class="col-md-2">
                {{ include('category_admin/_delete_form.html.twig') }}
            </div>
            <div class="col-md-2">
                <a href="{{ path('category_admin_edit', {'id': category.id}) }}"
                   class="btn btn-primary btn-block">{{ "Edit"|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}

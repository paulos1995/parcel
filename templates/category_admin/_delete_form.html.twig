<form method="post" action="{{ path('category_admin_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item??');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger btn-block">{{ "Delete"|trans }}</button>
</form>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}

            <div class="mb-3">
                <label for="currentEmail" class="form-label">{{ "CurrentEmail"|trans }}</label>
                <input type="text" id="currentEmail" class="form-control" disabled value="{{ currentEmail }}">
            </div>


            {{ form_row(form.newEmail) }}


            <button class="btn btn-primary">{{ 'Confirm'|trans }}</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>